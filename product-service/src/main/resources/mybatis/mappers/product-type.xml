<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.productservice.mybatis.mapper.ProductTypeMapper">
    <resultMap id="ProductTypeResultMap" type="ProductType">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="price" property="price" jdbcType="DOUBLE"/>
        <result column="quantity" property="quantity" jdbcType="INT"/>
        <result column="description" property="description" jdbcType="TEXT"/>
        <result column="status" property="status" jdbcType="BOOLEAN"/>
        <result column="image_id" property="imageId" jdbcType="VARCHAR"/>
        <result column="product_id" property="productId" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, price, quantity, description, status, image_id, product_id
    </sql>

    <select id="findAll" resultMap="ProductTypeResultMap">
        SELECT <include refid="Base_Column_List"/> FROM product_type
    </select>
</mapper>